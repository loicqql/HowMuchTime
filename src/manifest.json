{
  "manifest_version": 2,

  "name": "HowMuchTime",
  "description": "How Much Time On Internet.",
  "version": "0.1",
  "author": "Loic Quinquenel",

  "background": {
    "scripts": ["/js/main.js", "/js/const.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "HowMuchTime",
    "default_popup": "index.html"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "icons": {
    "1000": "./img/logo.png"
  }
}